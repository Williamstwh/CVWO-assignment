<h1>Your Todo list</h1>

<%= form_with( url: my_todos_path, method: :get) do |form| %>

    <table>
        <thead>
        </thead>
        <tbody>
            <tr>
                <td style="border-color: #ffffff00"><%= form.text_field :search %></td>
                <td style="border-color: #ffffff00"><%= form.select :category, ['Title', 'Description', 'Deadline'] %></td>
                <td style="border-color: #ffffff00"><%= form.submit "search" %></td>
            </tr>
        </tbody>
    </table>
<% end %>

<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Deadline</th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        <% @todos.each do |todoitem| %>
            <tr>
                <td><%= todoitem.title %></td>
                <td><%= todoitem.description %></td>
                <td><%= todoitem.due.to_formatted_s(:long_ordinal) %></td>
                <td><%= link_to 'Show', my_todo_path(todoitem) %></td>
                <td><%= link_to 'Edit', edit_my_todo_path(todoitem) %></td>
                <td><%= link_to 'Delete', my_todo_path(todoitem), method: :delete, data: { confirm: 'Are you sure?'} %></td>
            </tr>
        <% end %>
    </tbody>
</table>

<%= link_to 'New Todo item', new_my_todo_path %>
